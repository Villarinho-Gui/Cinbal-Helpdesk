// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id        String @id @default(uuid())
  name      String
  email     String @unique
  password  String
  extension Int
  position  String
  sector    String
}

model call {
  id          String   @id @default(uuid())
  author      String?
  title       String
  category    String
  description String
  files       files[]  @relation("CallToFiles")
  createdAt   DateTime @db.DateTime()
}

model files {
  id     String  @id @default(uuid())
  url    String
  text   call?   @relation("CallToFiles", fields: [callId], references: [id])
  callId String?
}
